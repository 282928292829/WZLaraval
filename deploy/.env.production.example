# ─── Application ──────────────────────────────────────────────────────────────
APP_NAME=Wasetzon
APP_ENV=production
APP_KEY=                          # run: php8.3 artisan key:generate --show
APP_DEBUG=false
APP_URL=https://wasetzon.com
APP_LOCALE=ar
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ar_SA
APP_MAINTENANCE_DRIVER=file

# ─── Logging ──────────────────────────────────────────────────────────────────
LOG_CHANNEL=daily
LOG_LEVEL=error
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null

# ─── Database (MySQL 8) ───────────────────────────────────────────────────────
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=wasetzon
DB_USERNAME=wasetzon
DB_PASSWORD=                      # from /root/.wasetzon-db-pass on server

# ─── Legacy DB (only needed when running migration scripts) ───────────────────
LEGACY_DB_CONNECTION=mysql
LEGACY_DB_HOST=127.0.0.1
LEGACY_DB_PORT=3306
LEGACY_DB_DATABASE=wasetzon_legacy
LEGACY_DB_USERNAME=wasetzon_legacy
LEGACY_DB_PASSWORD=
LEGACY_UPLOADS_PATH=/var/www/wasetzon/storage/app/legacy-uploads

# ─── Cache (Redis) ────────────────────────────────────────────────────────────
CACHE_STORE=redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ─── Sessions (Redis) ─────────────────────────────────────────────────────────
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=wasetzon.com
BCRYPT_ROUNDS=12

# ─── Queue (Redis) ────────────────────────────────────────────────────────────
QUEUE_CONNECTION=redis
BROADCAST_CONNECTION=log

# ─── File storage ─────────────────────────────────────────────────────────────
FILESYSTEM_DISK=local
# To switch to Cloudflare R2 later, set FILESYSTEM_DISK=s3 and fill these:
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=auto
AWS_BUCKET=
AWS_ENDPOINT=https://<account>.r2.cloudflarestorage.com
AWS_USE_PATH_STYLE_ENDPOINT=true

# ─── Mail (SMTP) ──────────────────────────────────────────────────────────────
# Configure per-type email toggles in Filament → Settings → Email
MAIL_MAILER=smtp
MAIL_SCHEME=tls
MAIL_HOST=smtp.yourmailprovider.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@wasetzon.com
MAIL_FROM_NAME="وسيط زون"

# ─── Vite ─────────────────────────────────────────────────────────────────────
VITE_APP_NAME="${APP_NAME}"
